- let getPageTitle = function() {
-     let pageTitle = ''
-     if (is_post()) pageTitle = page.title
-     if (is_archive()) pageTitle = 'Archive'
-     if (is_tag()) pageTitle = 'Tag: ' + page.tag
-     if (is_category()) pageTitle = 'Category: ' + page.category
-     if (is_month()) pageTitle += ': ' + page.month + '/' + page.year
-     if (is_year()) pageTitle += ': ' + page.year
-     pageTitle += ' [ ' + config.title + ' ] '
-     return pageTitle
- }

doctype html
html(lang=config.language)
  head
    meta(charset='UTF-8')
    title= getPageTitle()
    if theme.stylesheets !== undefined && theme.stylesheets.length > 0
      //- stylesheets list from _config.yml
      each url in theme.stylesheets
        link(rel='stylesheet', href=url)
    if theme.scripts !== undefined && theme.scripts.length > 0
      //- scripts list from _config.yml
      each url in theme.scripts
        script(src=url)
      script.

        window.addEventListener('DOMContentLoaded', function() {
          // highlight
          setTimeout(function() {
            hljs.initHighlighting()
          },0)
          // smooth scroll
          if(window.Scrollbar && screen && screen.width > 1080) {
            const { Scrollbar } = window
            Scrollbar.init(document.querySelector('.scrollbar'), { damping: 0.22 })
          }
          // if mobile, don't smooth scroll
        })

  body
    .mask-border
    .scrollbar
      include ./head
      .paper-container
        block content
      include ./footer



